@model AllCustomersModel

@{
    ViewData["Title"] = "All Customers";
}

<h2>@ViewData["Title"]</h2>
<h3>Ordered in @(Model.OrderDirection.ToString().ToLower()) direction</h3>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Birthday
        </th>
        <th>
            IsYoungDriver
        </th>
        <th></th>

    </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.BirthDate.ToShortDateString()
                </td>
                <td>
                    @(customer.IsYoungDriver ? "Yes" : "No")
                </td>
                
                <td class="text-center">
                    <a class="btn btn-sm btn-warning" href="/customers/edit/@customer.Id" >Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>