@model CarFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" required class="form-control" />
        <span asp-validation-for="Make" class="form-text text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" required class="form-control" />
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TravelledDistance"></label>
        <input asp-for="TravelledDistance" required min="0" class="form-control" />
        <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="PartsId"></label>
        <select asp-for="PartsId" asp-items="@Model.Parts" multiple class="form-control" size="20"> </select>
        <small>* Hold "Ctrl" to select multiple parts.</small>
        <span asp-validation-for="PartsId" class="form-text text-danger"></span>
    </div>
    

    <br />
    <div>
        <a class="btn btn-default btn-lg" href="/cars/all">Back</a>                
        <input class="btn btn-success btn-lg" type="submit" value="Save Car"/>
    </div>
</form>
